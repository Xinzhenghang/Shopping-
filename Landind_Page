 <?php


   if(isset($_POST["reg"]) && $_POST["reg"]=="login"){
        
       $val=$_POST["code"];
       
        if($val==null){
          
             echo "<script type='text/javascript'>test()</script>";
        }else{
            
            
            try{
        
         $servername = "localhost";
         
         $username = "root";
         
         $password = "";
         
         $dbname = "pdoposts";
         
        $conn = new PDO("mysql:host=$servername;dbname=$dbname", $username, $password);
        
            $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
              
              $sql = "SELECT *FROM trade WHERE Trade_No='$val' ";
              
              $sql1="SELECT *FROM trade WHERE Trade_Date='$val' ";
              
              $sql2="SELECT *FROM trade WHERE Item_Name='$val' ";
              
              $sql3="SELECT *FROM trade WHERE Trade_Price='$val' ";
               
              $sql4="SELECT *FROM trade WHERE Company_Name='$val' ";
              
              $sql5="SELECT *FROM trade WHERE Popularity='$val' ";
              
              $sql6="SELECT *FROM trade WHERE Post_Code='$val' ";
              
              $sql7="SELECT *FROM trade WHERE Trade_Country='$val' ";
              
              $res = $conn->query($sql);
              
              $res1 = $conn->query($sql1);
              
              $res2 = $conn->query($sql2);
              
              $res3 = $conn->query($sql3);
              
              $res4 = $conn->query($sql4);
              
              $res5 = $conn->query($sql5);
              
              $res6 = $conn->query($sql6);
              
              $res7 = $conn->query($sql7);
                
                if($res->fetchColumn() > 0||$res1->fetchColumn() > 0||$res2->fetchColumn() > 0||$res3->fetchColumn() > 0||$res4->fetchColumn() > 0||$res5->fetchColumn() > 0||$res6->fetchColumn() > 0||$res7->fetchColumn() > 0){
                    
                    $_SESSION['val']=$val;
                    
                      echo "<script type='text/javascript'>window.top.location='http://localhost:4433/PhpProject3/SSE_check.php';</script>";
                      
                      
                }else{
                    
                    
                    echo "<script type='text/javascript'>test1()</script>";
                }
               
            } catch(PDOException $e){
           
           echo "<p style='color:red;font-size:12px;'>Can not connect the server</p>";
       }
        }
       
   }
    
